<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_moyoapp_Color"
    tools:context="fragments.StatisticsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_marginStart="16sp"
        android:layout_marginLeft="16sp">

        <TextView
            android:id="@+id/textView_bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rockoultraflf"
            android:layout_marginTop="200dp"
            android:layout_marginRight="16dp"
            android:text="Bp"
            android:textColor="@color/text_white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_statistics"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@id/textView_bp"
            android:src="@drawable/ic_graph_statistics"
            android:layout_marginLeft="8dp" />


        <TextView
            android:id="@+id/textView_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textSize="20dp"
            android:textColor="@color/text_white"
            android:layout_below="@id/img_statistics"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rockoultraflf"/>





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>