<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_moyoapp_Color"
    tools:context=".bpreadindsFragment">

    <TextView
        android:id="@+id/textView_bpreadings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final BP Readings"
        android:textColor="@color/text_white"
        android:fontFamily="@font/rockoultraflf"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/textView_bpreadings"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/systolic_diastolic_bpreadings"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/montserratmedium"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="systolic/diastolic"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:textColorHint="@color/textColor_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/heart_rate_bpreadings"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/montserratmedium"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="heart rate"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textColorHint="@color/textColor_grey"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_bpreadings"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_white"
                android:fontFamily="@font/montserratmedium"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="normal/abnormal"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:textColorHint="@color/textColor_grey"/>




        </LinearLayout>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>